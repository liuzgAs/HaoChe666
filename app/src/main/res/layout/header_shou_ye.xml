<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:canLoop="true" />

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:src="@mipmap/quanguoyouzhiche"
            android:layout_width="wrap_content"
            android:layout_height="13dp"
            android:id="@+id/imageView5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="@color/line_gray"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imageView5"
            android:layout_toEndOf="@+id/imageView5" />

        <TextView
            android:layout_marginRight="20dp"
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:id="@+id/textView6"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/imageView5"
            android:layout_toStartOf="@+id/imageView5" />
    </RelativeLayout>

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_zuoshangjiao_10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/maiche_shouye"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:id="@+id/imageView6"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:src="@mipmap/pinpaixuanche"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView7"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:src="@mipmap/jiagexuanche"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="1dp"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:gravity="center"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:background="@color/shouYeZongSe"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:src="@mipmap/woyaomaiche"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView9"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:textColor="@color/basic_color"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要卖车"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textView7"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView9"
                android:layout_toEndOf="@+id/imageView9" />
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_youxiajiao_10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <ImageView
                android:src="@mipmap/huiyuan"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView10"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="5dp"
                android:textColor="@color/basic_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册会员"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textView8"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView10"
                android:layout_toEndOf="@+id/imageView10" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0-5万"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="@color/line_gray" />

            <TextView
                android:textSize="@dimen/normal_textsize"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0-5万"
                android:id="@+id/textView10" />

