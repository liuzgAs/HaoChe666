<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical"
    tools:context="com.haoche666.buyer.avtivity.DuiBiActivity">

    <include layout="@layout/view_bar_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="已选车辆"
            android:textSize="@dimen/normal_textsize" />

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_empty="@layout/view_empty"
            app:layout_progress="@layout/view_progress"
            app:scrollbars="none" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/scrollview_dui_bi" />

        <LinearLayout
            android:id="@+id/viewCeilling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/line_gray">

            <TextView
                android:id="@+id/textCeiling"
                style="@style/itemDuiBiTitle"
                android:layout_width="80dp"
                android:text="@string/duiBiTitle01" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
