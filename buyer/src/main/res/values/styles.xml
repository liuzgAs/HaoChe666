<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--主界面不要透明,否则就显示桌面了~-->
    <style name="AppThemeNoTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <style name="MyBtn01">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_basic01_5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="MyBtn02">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/shape_gold_5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="itemDuiBiTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
    </style>

    <style name="duiBiItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="duiBiInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:background">@color/duiBiItem</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">2</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
    </style>

    <style name="btnDiBu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normalItemHeight</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/basic_color01</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigText</item>
    </style>

    <style name="vinStytle">
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM
        </item>
        <item name="android:maxLength">17</item>
    </style>
</resources>
