<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView186"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/empty_db" />

        <TextView
            android:id="@+id/textView127"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView186"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="没有对比车辆，赶紧添加吧！"
            android:textSize="@dimen/MoreBigText" />

        <Button
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/buttonAdd"
            style="@style/MyBtn01"
            android:layout_below="@+id/textView127"
            android:layout_centerHorizontal="true"
            android:text="添加对比车辆" />
    </RelativeLayout>
</RelativeLayout>