<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/jingcaituwen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imageImg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/shape_zuoshangjiao_youxiajiao_15dp"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="25dp"
        android:text="5651人阅读"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageImg"
        android:layout_alignEnd="@+id/imageImg" />

    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="10dp"
        android:background="@drawable/jian_bian_tranblack"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="400匹全时四驱到底有多快？两小伙伴都玩疯了呢！疯了！疯了！疯了！疯了！疯了！"
        android:textSize="@dimen/bigText"
        android:id="@+id/textTitle"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/imageImg"
        android:layout_alignStart="@+id/imageImg" />
</RelativeLayout>