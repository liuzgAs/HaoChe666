<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/viewBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/che_hang"
            android:fitsSystemWindows="true"
            android:gravity="bottom"
            android:minHeight="?attr/actionBarSize"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/titleHeight">

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:background="@mipmap/che_hang_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/viewBar"
            android:layout_centerHorizontal="true"
            android:id="@+id/relativeLayout4">

            <huisedebi.zjb.mylibrary.customview.CircleImageView
                app:civ_border_color="@color/basic_color"
                app:civ_border_width="3dp"
                android:src="@mipmap/che_hang_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageLogo"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关注：198"
                android:layout_margin="10dp"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textText1"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:visibility="gone"
                android:textColor="#999999"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="粉丝：198"
                android:textSize="@dimen/normal_textsize"
                android:id="@+id/textText2"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦门中保世界精品车行"
                android:textSize="@dimen/bigText"
                android:textColor="@color/light_black"
                android:id="@+id/textName"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="厦门中宝世纪精品车行有限公司"
                android:textSize="@dimen/moreLitterText"
                android:textColor="@color/text_gray"
                android:layout_marginTop="5dp"
                android:id="@+id/textCompany"
                android:layout_below="@+id/textName"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="5dp"
        android:text="在售车辆"
        android:textSize="@dimen/bigText"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight" />
    <!--<android.support.design.widget.TabLayout-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:id="@+id/tablayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/normalItemHeight"-->
        <!--android:background="@color/white"-->
        <!--app:tabIndicatorColor="@color/basic_color"-->
        <!--app:tabIndicatorHeight="0dp"-->
        <!--app:tabMode="fixed" />-->
</LinearLayout>