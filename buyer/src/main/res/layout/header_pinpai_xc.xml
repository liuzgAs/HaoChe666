                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image0008"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="福特"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reMen09"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/layout_selector_white_system_gray"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image0009"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/baoma" />

                <TextView
                    android:id="@+id/text0009"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image0009"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="宝马"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reMen10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/layout_selector_white_system_gray"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image0010"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/benchi" />

                <TextView
                    android:id="@+id/text0010"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image0010"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="奔驰"
                    android:textColor="@color/light_black"
                    android:textSize="@dimen/normal_textsize" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewBuXian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textStar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="★"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />

        <TextView
            android:id="@+id/textBuXian"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/layout_selector_white_system_gray"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="不限品牌"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />
        <TextView
            android:id="@+id/textLine1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background" />
    </LinearLayout>

</LinearLayout>