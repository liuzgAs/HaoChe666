<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray"
    >

    <TextView
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:textSize="@dimen/moreLitterText"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="订单创建时间：2017-10-26"
        android:textColor="@color/text_gray"
        android:id="@+id/textView122" />

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <ImageView
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/aodi"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id="@+id/imageView4"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标致207 2009款 三厢1.6L 手自一体"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="@dimen/bigText"
            android:textColor="@color/light_black"
            android:lines="2"
            android:ellipsize="end"
            android:id="@+id/textView2"
            android:layout_alignTop="@+id/imageView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        <TextView
            android:textColor="@color/basic_color"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="@dimen/normal_textsize"
            android:background="@drawable/shape_zuoshangjiao_youxiajiao_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易成功"
            android:id="@+id/textView121"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />
    </RelativeLayout>

</LinearLayout>