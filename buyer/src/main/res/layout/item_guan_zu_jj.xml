<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/layout_selector_white_system_gray">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/aodi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="标致207 2009款 三厢1.6L 手自一体"
        android:textColor="@color/light_black"
        android:textSize="@dimen/bigText"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/imageView4"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/litterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5万公里|2012年" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="51.8万"
            android:textColor="@color/textGold"
            android:textSize="@dimen/bigText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="已降1.3万"
            android:textColor="@color/dingDanChaWeiXiu"
            android:textSize="@dimen/normal_textsize" />
    </RelativeLayout>

</RelativeLayout>