<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.haoche666.buyer.fragment.MaiCheFragment">


    <com.jude.easyrecyclerview.EasyRecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includeBar"
        app:layout_empty="@layout/view_empty"
        app:layout_progress="@layout/view_progress"
        app:scrollbarStyle="insideOverlay" />

    <RelativeLayout
        android:id="@+id/viewShaiXuan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/includeBar"
        android:background="@color/tranblack">

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/recyclerViewShaiXuan00"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:layout_empty="@layout/view_empty"
            app:layout_progress="@layout/view_progress"
            app:scrollbarStyle="insideOverlay" />

        <LinearLayout
            android:background="@color/background"
            android:id="@+id/viewShaiXuan01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <huisedebi.zjb.mylibrary.customview.GridView4ScrollView
                android:background="@color/white"
                android:id="@+id/gridPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/light_black"
                    android:text="自定义价格"
                    android:textSize="@dimen/normal_textsize"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/textZidingYiJaiGe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="/万"
                    android:layout_toRightOf="@+id/textZidingYiJaiGe"
                    android:layout_alignBaseline="@+id/textZidingYiJaiGe"
                    android:textSize="@dimen/moreLitterText"
                    android:textColor="@color/text_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="不限"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/normal_textsize"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/textZidingYiJaiGe"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <RelativeLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="确定"
                    style="@style/MyBtn02"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/includeBar"
        layout="@layout/view_mai_che_bar" />
</RelativeLayout>
