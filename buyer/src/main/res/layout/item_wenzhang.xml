<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/layout_selector_white_system_gray"
    android:layout_width="match_parent" android:layout_height="120dp">
    <ImageView
        android:src="@mipmap/ic_empty"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_width="130dp"
        android:id="@+id/imageImg"
        android:layout_height="70dp" />
    <TextView
        android:id="@+id/textTitle"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="2"
        android:text="400匹全时四驱到底有多快？两小伙伴每天都玩疯了呢！"
        android:textSize="@dimen/normal_textsize"
        android:textStyle="bold"
        android:textColor="@color/light_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textDes"
        android:layout_toRightOf="@+id/imageImg"
        android:layout_alignBottom="@+id/imageImg"
        android:textSize="@dimen/normal_textsize"
        android:textColor="@color/text_gray"
        android:text="好车666"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>