<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/layout_selector_white_system_gray"
    android:layout_height="60dp">

    <ImageView
        android:layout_marginLeft="10dp"
        android:src="@mipmap/pic1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageTouXiang"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="@dimen/normal_textsize"
        android:textColor="@color/light_black"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李小贝"
        android:id="@+id/textUser_name"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageTouXiang"
        android:layout_toEndOf="@+id/imageTouXiang" />

    <TextView
        android:layout_marginRight="10dp"
        android:textSize="@dimen/litterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-6-30"
        android:id="@+id/textAdd_time"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>