<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="hudongchuangxiang.com.seller.fragment.WoDeFragment">

    <huisedebi.zjb.mylibrary.customview.HeadZoomScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:background="@mipmap/mine_bg">

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="@color/white"
                android:clipChildren="false"
                android:gravity="bottom"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clipChildren="false">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentBottom="true"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="false">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@mipmap/card_bg"
                            android:clipChildren="true"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginBottom="30dp"
                                android:text="科沃斯精品车行"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/bigText"
                                android:textStyle="bold" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp">

                                <TextView
                                    android:id="@+id/text0000"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="15dp"
                                    android:text="余额："
                                    android:textColor="@color/light_black"
                                    android:textSize="@dimen/normal_textsize" />

                                <TextView
                                    android:id="@+id/textJinE"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@+id/text0000"
                                    android:layout_toRightOf="@+id/text0000"
                                    android:scaleY="1.2"
                                    android:text="1032"
                                    android:textColor="@color/textGold"
                                    android:textSize="30dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBottom="@+id/textJinE"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="3dp"
                                    android:layout_marginRight="15dp"
                                    android:background="@drawable/shape_basic1dp_15dp"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="30dp"
                                    android:paddingRight="30dp"
                                    android:paddingTop="5dp"
                                    android:text="充值"
                                    android:textColor="@color/textGold"
                                    android:textSize="@dimen/normal_textsize" />
                            </RelativeLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <huisedebi.zjb.mylibrary.customview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="2dp"
                        android:src="@mipmap/tou"
                        app:civ_border_color="@color/textGold"
                        app:civ_border_width="3dp" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/viewDianPuBianJi"
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0100"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine01" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0100"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="店铺编辑"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0101"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine02" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0101"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="店铺预览"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0102"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine03" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0102"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="店铺分享"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/viewDiangDanGL"
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0200"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine04" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0200"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="订单管理"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:id="@+id/image0201"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine05" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0201"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="车辆管理"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:id="@+id/image0202"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine06" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0202"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="我的钱包"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/viewDianPuShuJu"
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0300"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine07" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0300"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="店铺数据"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0301"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine08" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0301"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="我的粉丝"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0302"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine09" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0302"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="我的动态"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:layout_marginBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:id="@+id/viewZhangHaoGL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image0400"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0400"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="账号管理"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:paddingBottom="1dp"
                        android:paddingTop="1dp"
                        android:id="@+id/image0401"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0401"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="意见反馈"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:background="@drawable/layout_selector_white_system_gray"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:id="@+id/image0402"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mine_img_height"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/mine12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/image0402"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="关于我们"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </huisedebi.zjb.mylibrary.customview.HeadZoomScrollView>
    <include layout="@layout/view_bar_mine"/>
</RelativeLayout>
