<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="hudongchuangxiang.haoche666.seller.activity.ShenQingSYActivity">

    <include
        android:id="@+id/includeViewBar"
        layout="@layout/view_bar_white" />

    <TextView
        android:id="@+id/textTip"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/includeViewBar"
        android:layout_marginTop="5dp"
        android:background="@color/basic_color"
        android:gravity="center"
        android:text="填写资料，使用好车666卖家版本"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_textsize" />

    <ScrollView
        android:layout_above="@+id/btnTiJiao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textTip">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white" />

            <TextView
                style="@style/textItemTitle"
                android:text="基本信息" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                app:divider="@drawable/line"
                app:dividerPadding="10dp"
                app:showDividers="middle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight">

                    <TextView
                        android:id="@+id/text0000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="公司名称"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:layout_toRightOf="@+id/text0000"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请填写公司名称"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight">

                    <TextView
                        android:id="@+id/text0100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="负责人姓名"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:layout_toRightOf="@+id/text0100"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请填写负责人姓名"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight">

                    <TextView
                        android:id="@+id/text0200"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="联系电话"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:layout_toRightOf="@+id/text0200"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:hint="请填写联系电话"
                        android:inputType="number"
                        android:maxLength="11"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="区域选择"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/normal_textsize" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="25dp"
                        android:text="特斯科精品车行"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/normal_textsize" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/right" />
                </RelativeLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="具体地址"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/normal_textsize" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normalItemHeight"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="库存规模"
                    android:inputType="number"
                    android:maxLength="9"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/normal_textsize" />
            </android.support.v7.widget.LinearLayoutCompat>

            <TextView
                style="@style/textItemTitle"
                android:layout_marginTop="5dp"
                android:text="相关资料" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <huisedebi.zjb.mylibrary.customview.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#f6f6f6"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image0000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/add_pic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image0000"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="上传营业执照"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/normal_textsize" />
                    </RelativeLayout>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/imageYingYeZZ"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </huisedebi.zjb.mylibrary.customview.SquareLayout>

                <huisedebi.zjb.mylibrary.customview.SquareLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#f6f6f6"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/image0100"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/add_pic" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/image0100"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="上传门头照片"
                            android:textColor="@color/light_black"
                            android:textSize="@dimen/normal_textsize" />
                    </RelativeLayout>

                    <ImageView
                        android:scaleType="centerCrop"
                        android:id="@+id/imageMenTouZP"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </huisedebi.zjb.mylibrary.customview.SquareLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnTiJiao"
        style="@style/btnDiBu"
        android:text="提交" />
</RelativeLayout>
