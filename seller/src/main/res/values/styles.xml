<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!--主界面不要透明,否则就显示桌面了~-->
    <style name="AppThemeNoTranslucent" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="YuYueText">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">@dimen/normal_textsize</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnYuanJiao">
        <item name="android:textSize">@dimen/bigText</item>
        <item name="android:background">@drawable/shape_basic01_25dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normalItemHeight</item>
    </style>

    <style name="btnDiBu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/normalItemHeight</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/basic_color01</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/bigText</item>
    </style>
</resources>
